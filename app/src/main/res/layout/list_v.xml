<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:gravity="center"
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEST"
        style="@style/CustomTextView"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TEST"
        android:id="@+id/weatherType"
        style="@style/CustomTextView"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/TempLabel"
                android:layout_width="wrap_content"
                android:id="@+id/dayLabel"
                android:layout_height="wrap_content"
                android:text="@string/day_temp"
                />
            <TextView
                style="@style/Temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45.8"
                android:id="@+id/day_temp"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/TempLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/morn_temp"
            />
        <TextView
            style="@style/Temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="454.6"
            android:id="@+id/morn_temp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/TempLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eve_temp"
        />
        <TextView
            style="@style/Temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eve_temp"
            android:text="454.6"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/TempLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/night_temp"
            />
        <TextView
            style="@style/Temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/night_temp"
            android:text="454.6"
            />
    </LinearLayout>

</LinearLayout>